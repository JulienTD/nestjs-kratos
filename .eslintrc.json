{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "MemberExpression": 0
        }],
        "object-curly-spacing": "off",
        "max-len": ["error", {
            "code": 100,
            "ignoreTemplateLiterals": true,
            "ignoreStrings": true,
            "ignoreRegExpLiterals": true,
            "ignoreTrailingComments": true
        }],
        "quotes": ["error", "double", {
            "allowTemplateLiterals": true
        }],
        "new-cap": ["error", {
            "capIsNewExceptions": ["Data"]
        }],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error",
        "curly": ["error", "multi", "consistent"]
    }
}
